# Simple Dockerfile - Build locally first, then create image
# Run: npm run build
# Then: docker build -f Dockerfile.simple -t agri-fields .

FROM nginx:alpine

# Copy pre-built files
COPY dist /usr/share/nginx/html

# Copy nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
